                <%= link_to("Solliciteren", solliciteren_path) %>
              </li>
              <li class="last<%=' active' if params[:action]=='klant_worden'%>">
                <%= link_to("Klant Worden?", klant_worden_path) %>
              </li>
            </ul>		
        </div>
    </div><!-- #header --> 
    <div id="middle">		
