              <li class="<%='active' if params[:action]=='over_ons'%>">
                <%= link_to("Over Ons", over_ons_path) %>
              </li>
              <li class="<%='active' if params[:action]=='werkwijze'%>">
                <%= link_to("Werkwijze", werkwijze_path) %>
              </li>
              <li class="<%='active' if params[:action]=='solliciteren'%>">
                <%= link_to("Solliciteren", solliciteren_action_path) %>
              </li>
              <li class="last<%=' active' if params[:action]=='klant_worden'%>">
                <%= link_to("Klant Worden?", klant_worden_path) %>
              </li>
            </ul>		
        </div>
    </div><!-- #header --> 
    <div id="middle">		
    	<%= yield %>        
    </div><!-- #middle -->
